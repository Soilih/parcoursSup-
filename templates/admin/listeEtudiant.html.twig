
{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">
                  GESTION DES ETUDIANTS 
                   </h3>
                   <span class="badge badge-light"> {{ nos_etudiant  | length }}</span>
                    
                  
                </div>
              <!-- /.card-header -->
              <div class="card-body">
               <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                <thead>
                  <tr>
                    <th>Nom de famille </th>
                    <th>prenom  </th>
                    <th class="hidden-phone">Date de Naissance </th>
                    <th class="hidden-phone">Lieu de naissance </th>
                    <th class="hidden-phone">Numero de Carte Nationale</th>
                    <th class="hidden-phone">Sexe  </th>
                    <th class="hidden-phone">Adresse domicile  </th>
                    <th class="hidden-phone">Actions  </th>
                  </tr>
                </thead>
                <tbody>
                {% for et  in nos_etudiant %}
                  <tr class="gradeX">
                    <td>{{ et.nom }}</td>
                    <td>{{ et.prenom }}</td>
                    <td>{{ et.datenaissance  ? et.datenaissance |date('d/m/Y' , false) : '' }}</td>
                    <td>{{ et.lieunaissance }}</td>
                    <td>{{ et.nin }}</td>
                    <td>{{ et.sexe }}</td>
                    <td>{{ et.adresse }}</td>
                    <td>
                      <a href="{{ path('listetudiant', {'id': et.id}) }}"><i style="color:bleu" class="fa fa-eye"></i></a>       
                    </td>
                   
                
                    
                   
                  </tr>
                {% endfor %}
                  
                </tbody>
             

                </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>
{% endblock %}
