{% extends 'base.html.twig' %}

{% block body %}
  <section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> GESTION DE TYPE D'UNIVERSITÉ  </h3>
        <!-- BASIC FORM VALIDATION -->
        <div class="row mt">
          <div class="col-lg-6">
            <div class="form-panel">
              {{ include('type_universite/_form.html.twig') }}
                
            </div>
            <!-- /form-panel -->
          </div>
          <div class="col-lg-6">
            <div class="content-panel">
              <h4><i class="fa fa-angle-right"></i> Liste des type d'université  </h4>
              <hr>
               <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Libelle</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for type_universite in type_universites %}
                    <tr>
                        <td>{{ type_universite.id }}</td>
                        <td>{{ type_universite.libelle }}</td>
                        <td>
                         
                            <a href="{{ path('type_universite_edit', {'id': type_universite.id}) }}"> <i  class="fa fa-pencil"></i> </a>
                             <div style="display: inline-block;padding-left:2% ; color:red">{{ include('type_universite/_delete_form.html.twig') }} </div> 
                     
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
              
            </div>
            <!-- /form-panel -->
          </div>

          <!-- /col-lg-12 -->
        </div>
        
        <!-- /row -->
      </section>
      <!-- /wrapper -->
  </section>
 
{% endblock %}
