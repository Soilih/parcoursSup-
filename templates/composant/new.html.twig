

{% extends 'base.html.twig' %}

{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-5">
            <div class="card card-success">
              <div class="card-header" style="font-szie:24px">
                <h3 class="card-title">
                  
                  Enregistrer  un composant 
                </h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                       {{ include('composant/_form.html.twig') }}
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
           <div class="col-md-7">
            <div class="card card-success">
              <div class="card-header" style="font-szie:24px">
                <h3 class="card-title">
                  
                 Liste des composant  
                </h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                     <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Libelle</th>
                        <th>Description </th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for composant in composants %}
                    <tr>
                        <td>{{ composant.id }}</td>
                        <td>{{ composant.libelle }}</td>
                        <td>{{ composant.detail }}</td>
                        <td>
                          
                            <a href="{{ path('composant_edit', {'id': composant.id}) }}"><i style="color:bleu" class="fas fa-pencil-alt"></i></a>
                            <div style="display: inline-block;padding-left:2% ; color:red">{{ include('composant/_delete_form.html.twig') }} </div> 
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
          


        </div>
    </div>
</div>
{% endblock %}

