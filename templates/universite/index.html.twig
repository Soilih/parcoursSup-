{% extends 'base.html.twig' %}

{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">
                  Liste des Universités 
                </h3>
               <a  href="{{ path("universite_new") }}" class="btn btn-sm btn-primary" style="float:right">Ajouter université  </a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                 <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom de l'université </th>
                            <th>Type d'université </th>
                            <th>Pays</th>
                            <th>Site</th>
                            <th>Postal</th>
                            <th>Ville</th>
                            <th>Responsable</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for universite in universites %}
                        <tr>
                            <td>{{ universite.id }}</td>
                            <td>{{ universite.titre }}</td>
                            <td>{{ universite.type.libelle}}</td>
                            <td>{{ universite.pays.libelle}}</td>
                                <td>  <a href="{{ universite.site }}"> consulter le site </a></td>
                            <td>{{ universite.postal }}</td>
                            <td>{{ universite.ville }}</td>
                            <td>{{ universite.responsable }}</td>
                            <td>
                                <a href="{{ path('universite_show', {'id': universite.id}) }}"><i style="color:bleu" class="fa fa-eye"></i></a>
                                <a href="{{ path('universite_edit', {'id': universite.id}) }}"> <i style="color:bleu" class="fas fa-pencil-alt"></i></a>
                                <div style="display: inline-block;padding-left:2% ; color:red">{{ include('universite/_delete_form.html.twig') }} </div> 
                            </td>
                        </tr> 
                    {% else %}
                        <tr>
                            <td colspan="12">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>

{% endblock %}


