{% extends 'base.html.twig' %}

{% block title %}Universite index{% endblock %}

{% block body %}
<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> GESTION DE NIVEAU D'ETUDE  </h3>
        <!-- BASIC FORM VALIDATION -->
        <div class="row mt">
          
          <div class="col-lg-12">
            <div class="content-panel">
              <h4><i class="fa fa-angle-right"></i> Liste des Niveaux d'etudes </h4>
              <hr>
               <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de l'université </th>
                <th>Type d'université </th>
                <th>Pays</th>
                <th>Site</th>
                <th>Postal</th>
                <th>Ville</th>
                <th>Responsable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for universite in universites %}
            <tr>
                <td>{{ universite.id }}</td>
                <td>{{ universite.titre }}</td>
                  <td>{{ universite.type.libelle}}</td>
                  <td>{{ universite.pays.libelle}}</td>
                    <td>  <a href="{{ universite.site }}"> consulter le site </a></td>
                <td>{{ universite.postal }}</td>
                <td>{{ universite.ville }}</td>
                <td>{{ universite.responsable }}</td>
                <td>
                    <a href="{{ path('universite_show', {'id': universite.id}) }}">show</a>
                    <a href="{{ path('universite_edit', {'id': universite.id}) }}"> <i style="color:bleu" class="fa fa-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        </table>
            </div>
            <!-- /form-panel -->
          </div>

          <!-- /col-lg-12 -->
        </div>
        
        <!-- /row -->
      </section>
      <!-- /wrapper -->
</section>
{% endblock %}
