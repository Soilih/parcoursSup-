<form method="post" action="{{ path('responsable_delete', {'id': responsable.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ responsable.id) }}">
    <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
</form>
