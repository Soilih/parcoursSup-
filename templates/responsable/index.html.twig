{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">
                  Gestion responsable 
                   </h3>
                  
                           <span class="badge badge-primary">{{app.user.responsables|length }}</span>
 

                    <a  href="{{ path("responsable_new") }}" class="btn btn-primary" style="float:right">Ajouter un responsable</a>
                </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table class="table table-bordered table-hover">
                
                    <thead>
                        <tr>
                           
                            <th>Nom  </th>
                            <th>Prénom </th>
                            <th>Telephone</th>
                            <th> Adresse Email </th>
                            <th> Lieu de naissance  </th>
                            <th> Adresse domicile  </th>
                            <th> Activité proffessionnelle  </th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for responsable in app.user.responsables %}
                        <tr class="text-nowrap" >
                        
                            <td>{{ responsable.nom }}</td>
                            <td>{{ responsable.prenom }}</td>
                            <td>{{ responsable.tel }}</td>
                            <td>{{ responsable.email }}</td>
                             <td>{{ responsable.lieunaissance }}</td> 
                            <td>{{ responsable.adresse }}</td>
                            <td>{{ responsable.activite }}</td> 
                            <td>
                                <a  class="btn btn-primary btn-sm" href="{{ path('responsable_show', {'id': responsable.id}) }}">   <i class="fas fa-eye">
                              </i></a>
                                <a  class="btn btn-primary btn-sm" href="{{ path('responsable_edit', {'id': responsable.id}) }}"> <i class="fas fa-pencil-alt"></i> </a>
                                <div style="display: inline-block;padding-left:2% ; color:red">{{ include('responsable/_delete_form.html.twig') }} </div> 
                            </td>
                           
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>
{% endblock %}
