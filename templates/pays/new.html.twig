

{% extends 'base.html.twig' %}

{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-6">
            <div class="card card-success">
              <div class="card-header" style="font-szie:24px">
                <h3 class="card-title">
                  
                  Enregistrer Pays 
                </h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                   {{ include('pays/_form.html.twig') }}
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
           <div class="col-md-6">
            <div class="card card-success">
              <div class="card-header" style="font-szie:24px">
                <h3 class="card-title">
                  
                Liste de pays 
                </h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                    <table class="table" id="datatable" >
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Libelle</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for pay in pays %}
                        <tr>
                            <td>{{ pay.id }}</td>
                            <td>{{ pay.libelle }}</td>
                            <td>
                            
                          <a class="btn btn-info btn-sm" href="{{ path('pays_edit', {'id': pay.id}) }}">
                              <i class="fas fa-pencil-alt">
                              </i>
                            
                          </a>
                              <div style="display: inline-block;padding-left:2% ; color:red">{{ include('pays/_delete_form.html.twig') }} </div> 
                          </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
          


        </div>
    </div>
</div>
{% endblock %}



