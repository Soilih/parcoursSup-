{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">
                  
                  Liste des flux entrants 
                </h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                 
                <table class="table">
                    <thead>
                        <tr>
                            
                         
                            <th>date de Depart</th>
                            <th>Date d'arrivée  </th>
                            <th>Filiere d'étude </th>
                            <th>Diplome preparé </th>
                          
                            <th>Titre de l'université </th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for flux in app.user.fluxes %}
                        <tr>
                            
                           
                            <td>{{ flux.depart ? flux.depart|date('Y-m-d') : '' }}</td>
                            <td>{{ flux.dateArrive ? flux.depart|date('Y-m-d') : '' }}</td>
                            <td>{{ flux.filiere }}</td>
                            <td>{{ flux.diplome }}</td>
                           
                            <td>{{ flux.titreUniversite }}</td>
                            <td>
                                <a class="btn  btn-primary btn-sm" href="{{ path('flux_show', {'id': flux.id}) }}"><i  class="fas fa-eye"></i></a>
                                <a  class="btn  btn-primary btn-sm" href="{{ path('flux_edit', {'id': flux.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                                <div style="display: inline-block;padding-left:2% ; color:red">{{ include('flux/_delete_form.html.twig') }} </div> 
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                 </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>
{% endblock %}
