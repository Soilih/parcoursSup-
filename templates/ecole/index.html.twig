

{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-12">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">
                  LISTE DES ECOLES 
                   </h3>
                    <a  href="{{ path("ecole_new") }}" class="btn btn-primary" style="float:right">Ajouter une ecole </a>
                </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="datatable" class="table table-bordered table-hover" id="datatable">
               
                    <thead>
                        <tr>
                            
                            <th>Titre </th>
                            <th>Adresse</th>
                            <th>Telephone</th>
                            <th>Email</th>
                            <th>Nom du responsable </th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for ecole in ecoles %}
                        <tr>
                            
                            <td>{{ ecole.libelle }}</td>
                            <td>{{ ecole.adresse }}</td>
                            <td>{{ ecole.telephone }}</td>
                            <td>{{ ecole.email }}</td>
                            <td>{{ ecole.nomchef }}</td>
                            
                            <td>
                                <a href="{{ path('ecole_show', {'id': ecole.id}) }}"><i style="color:bleu" class="fa fa-eye"></i></a>
                                <a href="{{ path('ecole_edit', {'id': ecole.id}) }}"><i style="color:bleu" class="fas fa-pencil-alt"></i></a>
                                 <div style="display: inline-block;padding-left:2% ; color:red">{{ include('ecole/_delete_form.html.twig') }} </div> 
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                

                </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>
{% endblock %}