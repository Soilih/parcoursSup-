{% extends 'base.html.twig' %}
{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-8">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">
                  Description d'une ecole 
                   </h3>
                    <a  href="{{ path("ecole_new") }}" class="btn btn-primary" style="float:right">Ajouter une ecole </a>
                </div>
              <!-- /.card-header -->
              <div class="card-body">
                    <table class="table table-bordered table-hover">
                     <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ ecole.id }}</td>
                            </tr>
                            <tr>
                                <th>Libelle</th>
                                <td>{{ ecole.libelle }}</td>
                            </tr>
                            <tr>
                                <th>Adresse</th>
                                <td>{{ ecole.adresse }}</td>
                            </tr>
                            <tr>
                                <th>Telephone</th>
                                <td>{{ ecole.telephone }}</td>
                            </tr>
                            <tr>
                                <th>Detail</th>
                                <td>{{ ecole.detail }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ ecole.email }}</td>
                            </tr>
                            <tr>
                                <th>Ile</th>
                                <td>{{ ecole.ile }}</td>
                            </tr>
                            <tr>
                                <th>Nom du chef </th>
                                <td>{{ ecole.nomchef }}</td>
                            </tr>
                            <tr>
                                <th>FAX</th>
                                <td>{{ ecole.fax }}</td>
                            </tr>
                            <tr>
                                <th>Type d'ecole </th>
                                <td>{{ ecole.typeecole }}</td>
                            </tr>
                            <tr>
                                <th> Postal </th>
                                <td>{{ ecole.postal }}</td>
                            </tr>
                            <tr>
                                <th> site web </th>
                                <td>{{ ecole.site }}</td>
                            </tr>
                            <tr>
                                <th> Commune </th>
                                <td>{{ ecole.commune }}</td>
                            </tr>
                        </tbody>
                    </table>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>
{% endblock %}
