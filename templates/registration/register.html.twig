<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
   {% include "link/link_css.html.twig" %}
</head>
<body class="hold-transition register-page">
<div class="register-box">
<div class="login-logo" style="font-size:40px">
    <strong> <a><b>Parcours</b>Sup</a> </strong>
  </div>
     <div class="card">
        <div class="card-body card-primary register-card-body">
          <div style="text-align:left">
            <h4> <strong> S'inscrire  </strong>  </h4> 
          </div>
           
          {% for flashError in app.flashes('verify_email_error') %}
          <div class="alert alert-danger" role="alert">{{ flashError }}</div>
          {% endfor %}
            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.tel) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms) }}

                  <button type="submit" class="btn btn-primary btn-block">Je cr√©e mon nouveau compte </button>
            {{ form_end(registrationForm) }}
        </div>
        <div class="row">
          <div class="col-10" style="padding-left:23%">
            <div class="icheck-primary" style="padding-left:20%">
               <a href="{{ path("app_login") }}" class="btn btn-sm btn-success"> JE ME CONNECTE  </a>
            </div>
          </div>
     
      </div>
    <!-- /.form-box -->
  </div><!-- /.card -->
</div>
  {% include "link/link_js.html.twig" %}
</body>
</html>