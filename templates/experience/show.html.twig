{% extends 'base.html.twig' %}

{% block title %}Experience{% endblock %}

{% block body %}
<div class="wrapper">
  <div class="content-wrapper">
     <div class="row" style="padding-left:2%;padding-top:2%">
          <div class="col-md-10">
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">
                 
                  Description de l'experience proffessionnelle : 
                </h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                 <table class="table table-condensed table-striped">
                    <tbody>
                        <tr>
                            <th>Date debut Experience : </th>
                            <td>{{ experience.dateExperience ? experience.dateExperience|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date fin  Experience : </th>
                            <td>{{ experience.dateExperience ? experience.datefin|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Poste occupé :  </th>
                            <td>{{ experience.poste }}</td>
                        </tr>
                        <tr>
                            <th>Intitulé de l'entreprise : </th>
                            <td>{{ experience.entreprise }}</td>
                        </tr>
                        <tr>
                            <th>Description de votre stage / travail : </th>
                            <td>{{ experience.detail }}</td>
                        </tr>
                        <tr>
                            <th>Adresse de l'entreprise  : </th>
                            <td>{{ experience.ville }}</td>
                        </tr>
                        <tr>
                            <th>Pays  : </th>
                            <td>{{ experience.pays.libelle }}</td>
                        </tr>
                    </tbody>
                </table>
                <br>
                <br>
                  <a  class="btn btn-md btn-outline-primary" href="{{ path('experience_index') }}">consulter votre exeperience </a>
              </div>
              <!-- /.card-body -->
            </div>
          </div>  
        </div>
    </div>
</div>
{% endblock %}


 